<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e111a">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="johnson.bestdescription.QuestionAnswerFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/questionanswers_fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/scoreText"
        android:id="@+id/scoreText"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="46dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/scoreCountText"
        android:id="@+id/scoreCountText"
        android:layout_alignTop="@+id/scoreText"
        android:layout_toRightOf="@+id/scoreText"
        android:layout_marginLeft="10dp"
        android:textSize="24dp"
        android:textColor="#ffffff" />
</RelativeLayout>